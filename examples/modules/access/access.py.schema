# Copyright 2021 F5 Networks All rights reserved.

info:
  title: F5 Sample Access
  author: F5 Networks
  description: Creates a sample access module.
  version: 0.1.0

imports:
  - path: access.py

required:
    - availabilityZone
    - instanceType

properties:
  solutionType:
    description: Type of solution you want to deploy - standard, secret, storage, remoteLogging, failover 
    default: 'standard'
    type: string
  storageName:
    description: Storage Bucket for remote logging, failover solution etc.
    type: string
  secretId:
    description: ID of the secret stored in Secret Manager
    type: string
  uniqueString:
    description: Unique String used when creating object names or Tags.
    type: string

outputs:
  properties:
    serviceAccountEmail:
      type: string
      description: Email of the Service Account.
    customRoleName:
      type: string
      description: Name of custom role.
    customRolePermissions:
      type: string
      description: Permissions granted to custom role.

documentation:
  - README.md

examples:
  - sample_access.yaml